<%- errorMessagesFor(post) %>
<div class="control-group">
   <%- form.label("title", false, {class: "control-label"}) %>
   <div class="controls">
       <%- form.input("title") %>
   </div>
</div>
<div class="control-group">
   <%- form.label("content", false, {class: "control-label"}) %>
   <div class="controls">
       <%- form.input("content") %>
   </div>
</div>

<div class="control-group">
   <%- form.label("files", false, {class: "control-label"}) %>
   <div class="controls">


       <div class="row-fluid">
           <div class="span7">
                <span class="btn btn-success fileinput-button">
                    <i class="icon-plus icon-white"></i>
                    <span>Add files..</span>
                    <input id="fileupload" type="file" data-url="/upload" name="files[]" multiple/>
                </span>
           </div>
       </div>
       <div class="row-fluid">
             <div class="span4 upload-area">
                拖拽附件到此区域
            </div>
       </div>
        <div class="row-fluid">
            <h6>上传<h6>
            <div class="span2">
                <div id="upload-result"></div>

                <div id="progress">
                    <span id="percent"></span>
                    <div class="bar"></div>
                </div>
            </div>
            <table id="upload-result-table" role="presentation" class="table table-striped">
                <tbody class="files" data-toggle="modal-gallery" data-target="#modal-gallery">
                </tbody>
            </table>


        </div>
        <div id="upload-result-div" class="row-fluid">
            <table id="upload-table">
                <tr>
                    <th class="span1">
                        文件名
                    </th>
                    <th class="span1">
                        进度
                    </th>
                    <th class="span1">
                        大小
                    </th>
                    <th class="span1">
                        操作
                    </th>
                </tr>
            </table>
        </div>
   </div>

</div>


<div class="control-group">

   <%- form.label("published", false, {class: "control-label"}) %>

   <div class="controls">

       <%- form.checkbox("published") %>

   </div>

</div>


<script data-main="post" src="/javascripts/require-jquery.js"></script>
<script src="/javascripts/app/requirejs-config.js"></script>


<script id="upload-content-template" type="text/template">

    <td class="span1">
        {{ name }}
    </td>
    <td class="span1">
        进度
    </td>
    <td class="span1">
        {{ size }}
    </td>
    <td class="span1">
        操作
    </td>

</script>

<script id="upload-header-template" type="text/template">
    <tr>
        <th class="span1">
            文件名
        </th>
        <th class="span1">
            进度
        </th>
        <th class="span1">
            大小
        </th>
        <th class="span1">
            操作
        </th>
    </tr>
</script>
