<div class="container-fluid">

    <div class="page-header">
        <h4>模型列表</h4>
    </div>

    <div class="row">
        <div class="span12">
            <p><%- link_to('<i class="icon-plus icon-white"></i> New post', pathTo.new_post(), {class: 'btn btn-primary'}) %></>
        </div>
    </div>

    <div class="row">
        <div class="span12">
            <% if (posts.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>3D Model</th>
                        <th>Thumbnail</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% posts.forEach(function (post) { %>
                    <tr>
                        <td><strong><%- link_to(post.name, pathTo.post(post)) %></strong></td>
                        <td>
                            <% if(post.snapshotUrl) { %>
                                <img src="<%=post.snapshotUrl %>">
                            <% } %>
                        </td>
                        <td>
                            <%- link_to('<i class="icon-edit"></i> Edit', pathTo.edit_post(post), {class: 'btn btn-mini'}) %>
                            <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.post(post), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <% } else { %>
            <p class="alert alert-block alert-info">
                <strong>No posts were found.</strong>
            </p>
            <% } %>
        </div>
    </div>
</div>