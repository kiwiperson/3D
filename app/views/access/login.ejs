
<section class="dialog-section image-back">
        <div class="tip">
                <% var flash = request.flash('info').pop(); if (flash) { %>
                    <div class="alert alert-info">
                        <a class="close" data-dismiss="alert">×</a>
                        <%- flash %>
                    </div>
                <% } %>

                <% flash = request.flash('error').pop(); if (flash) { %>
                    <div class="alert alert-error">
                        <a class="close" data-dismiss="alert">×</a>
                        <%- flash %>
                    </div>
                <% }; %>
        </div>
        <div class="dialog">
            <% var form = formFor(user, {action: pathTo.login(), method: 'POST', id: "login-form", class: 'form-vertical form-inline'}) %>
            <%- form.begin() %>
                <%- errorMessagesFor(user) %>
                <div class="control-group">
                   <%- form.label("用户名", false, {class: "control-label"}) %>
                   <div class="controls">
                       <%- form.input("name") %>
                   </div>
                </div>
                <div class="control-group">
                   <%- form.label("密码", false, {class: "control-label"}) %>
                   <div class="controls">
                       <%- form.input("password",{type:"password"}) %>
                   </div>
                </div>
                <div class="control-group">
                    <%- form.submit('<i class="icon-ok icon-white"></i> 登陆', {class: 'btn btn-primary'}) %>
                </div>
            <%- form.end() %>
        </div>
        <div class="dialog-footer">
            <span class="pull-left">
                 开始你的3D奇幻旅程
            </span>
            <span>
                 <%- linkTo('注册', pathTo.signup(), {class: 'pull-right'}) %>
            </span>

        </div>

</section>

